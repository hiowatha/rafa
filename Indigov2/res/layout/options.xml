<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:background="@color/gray"
    android:layout_height="match_parent" >


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:contentDescription="@string/door1"
    android:gravity="center|top"
    android:paddingTop="25dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:text="@string/Provider"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Spinner
        android:id="@+id/provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/textView1"
        android:entries="@array/providers"
        android:minWidth="150dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="25dp"
        android:text="@string/Telephone"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/provider"
        android:layout_below="@+id/provider"
        android:ems="10"
        android:inputType="phone"
        android:maxLength="12"
        android:text="@string/SamplePhone"
        android:width="150dp" >
        
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/telephone"
        android:layout_marginTop="35dp"
        android:text="@string/TextMeTimer"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/textTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/telephone"
        android:ems="10"
        android:inputType="number"
        android:maxLength="8"
        android:text="@string/SampleTime"
        android:width="150dp" />

   <TextView
       android:id="@+id/textView4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/textView3"
       android:layout_below="@+id/textTimer"
       android:layout_marginTop="35dp"
       android:text="@string/ModuleIP"
       android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/moduleIp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/telephone"
        android:ems="10"
        android:inputType="text"
        android:maxLength="32"
        android:text="@string/SampleIP"
        android:width="150dp" />

       <TextView
       android:id="@+id/textView5"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/textView1"
       android:layout_below="@+id/moduleIp"
       android:layout_marginTop="35dp"
       android:text="@string/ModulePort"
       android:textAppearance="?android:attr/textAppearanceSmall" />


    <EditText
        android:id="@+id/modulePort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/telephone"
        android:ems="10"
        android:inputType="number"
        android:maxLength="6"        
        android:text="@string/SamplePort"
        android:width="150dp" />
    
    
    
    <Button
        android:id="@+id/CancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="50dp"
        android:text="@string/Cancel" />

    <Button
        android:id="@+id/SaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/CancelButton"
        android:layout_alignBottom="@+id/CancelButton"
        android:layout_alignRight="@+id/textTimer"
        android:text="@string/Save" />

</RelativeLayout>

</ScrollView>